<Window x:Class="Pokemon.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pokemon"
        Title="Pokédex"
        Width="1100"
        Height="900"
        WindowStartupLocation="CenterScreen">

    <!-- Fond dégradé bleu/rose/violet -->
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#93C5FD" Offset="0"/>
            <GradientStop Color="#C4B5FD" Offset="0.5"/>
            <GradientStop Color="#F9A8D4" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="40">

            <!-- Titre -->
            <TextBlock Text="Pokédex"
                       FontSize="36"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Recherchez un Pokémon par nom ou numéro"
                       Foreground="#666"
                       HorizontalAlignment="Center"
                       Margin="0,8,0,30"/>

            <!-- Recherche -->
            <Border Background="White"
                    CornerRadius="16"
                    Padding="16"
                    Margin="0,0,0,30">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20"
                                      ShadowDepth="4"
                                      Opacity="0.15"/>
                </Border.Effect>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- TextBox avec placeholder -->
                    <TextBox Height="44"
                             Margin="0,0,12,0"
                             FontSize="16"
                             VerticalContentAlignment="Center"
                             Text="Nom ou numéro"
                             Foreground="Gray"
                             Background="Transparent"
                             BorderThickness="0"
                             GotFocus="TextBox_GotFocus"
                             LostFocus="TextBox_LostFocus"/>

                    <!-- Bouton arrondi avec hover -->
                    <Button Grid.Column="1"
                            Content="🔍 Rechercher"
                            Padding="20,10"
                            FontWeight="SemiBold"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            Background="#6366F1">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border"
                                        Background="{TemplateBinding Background}"
                                        CornerRadius="15">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#4F46E5"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#3730A3"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter TargetName="border" Property="Background" Value="#A5B4FC"/>
                                        <Setter Property="Foreground" Value="#E5E7EB"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>

            <!-- Carte Pokémon -->
            <Border Background="White"
                    CornerRadius="24"
                    Padding="0"
                    Margin="0,0,0,40">
                <StackPanel>

                    <!-- Header dégradé -->
                    <Border Height="120" CornerRadius="24,24,0,0">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#60A5FA" Offset="0"/>
                                <GradientStop Color="#EC4899" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Charmeleon"
                                       Foreground="White"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="#005"
                                       Foreground="White"
                                       Opacity="0.8"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Image Pokémon -->
                    <Image Source="https://raw.githubusercontent.com/Yarkis01/TyraDex/images/sprites/1/regular.png"
                           Width="200"
                           Height="200"
                           HorizontalAlignment="Center"
                           Margin="0,-40,0,20">
                        <Image.Effect>
                            <DropShadowEffect BlurRadius="15"
                                              ShadowDepth="4"
                                              Opacity="0.2"/>
                        </Image.Effect>
                    </Image>

                    <!-- Contenu -->
                    <StackPanel Margin="20,0,20,24">

                        <!-- Type -->
                        <TextBlock Text="TYPE"
                                   FontWeight="Bold"
                                   Foreground="#666"
                                   Margin="0,0,0,8"/>
                        <Border Background="#FB923C"
                                Padding="10,4"
                                CornerRadius="16"
                                HorizontalAlignment="Left"
                                Margin="0,0,0,24">
                            <TextBlock Text="Feu"
                                       Foreground="White"
                                       FontWeight="Bold"/>
                        </Border>

                        <!-- Stats -->
                        <TextBlock Text="STATISTIQUES DE BASE"
                                   FontWeight="Bold"
                                   Foreground="#666"
                                   Margin="0,0,0,12"/>

                        <!-- PV -->
                        <StackPanel Margin="0,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="PV"/>
                                <TextBlock Text="58" Grid.Column="1" FontWeight="Bold"/>
                            </Grid>
                            <ProgressBar Height="8" Value="58" Maximum="100" Background="#E5E7EB" BorderThickness="0">
                                <ProgressBar.Foreground>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#60A5FA" Offset="0"/>
                                        <GradientStop Color="#A855F7" Offset="1"/>
                                    </LinearGradientBrush>
                                </ProgressBar.Foreground>
                            </ProgressBar>
                        </StackPanel>

                        <!-- Attaque -->
                        <StackPanel Margin="0,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Attaque"/>
                                <TextBlock Text="64" Grid.Column="1" FontWeight="Bold"/>
                            </Grid>
                            <ProgressBar Height="8" Value="64" Maximum="100" Background="#E5E7EB" BorderThickness="0">
                                <ProgressBar.Foreground>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#60A5FA" Offset="0"/>
                                        <GradientStop Color="#A855F7" Offset="1"/>
                                    </LinearGradientBrush>
                                </ProgressBar.Foreground>
                            </ProgressBar>
                        </StackPanel>

                        <!-- Défense -->
                        <StackPanel Margin="0,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Défense"/>
                                <TextBlock Text="58" Grid.Column="1" FontWeight="Bold"/>
                            </Grid>
                            <ProgressBar Height="8" Value="58" Maximum="100" Background="#E5E7EB" BorderThickness="0">
                                <ProgressBar.Foreground>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#60A5FA" Offset="0"/>
                                        <GradientStop Color="#A855F7" Offset="1"/>
                                    </LinearGradientBrush>
                                </ProgressBar.Foreground>
                            </ProgressBar>
                        </StackPanel>

                        <!-- Attaque Spéciale -->
                        <StackPanel Margin="0,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Atq. Spé"/>
                                <TextBlock Text="80" Grid.Column="1" FontWeight="Bold"/>
                            </Grid>
                            <ProgressBar Height="8" Value="80" Maximum="100" Background="#E5E7EB" BorderThickness="0">
                                <ProgressBar.Foreground>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#60A5FA" Offset="0"/>
                                        <GradientStop Color="#A855F7" Offset="1"/>
                                    </LinearGradientBrush>
                                </ProgressBar.Foreground>
                            </ProgressBar>
                        </StackPanel>

                        <!-- Défense Spéciale -->
                        <StackPanel Margin="0,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Déf. Spé"/>
                                <TextBlock Text="65" Grid.Column="1" FontWeight="Bold"/>
                            </Grid>
                            <ProgressBar Height="8" Value="65" Maximum="100" Background="#E5E7EB" BorderThickness="0">
                                <ProgressBar.Foreground>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#60A5FA" Offset="0"/>
                                        <GradientStop Color="#A855F7" Offset="1"/>
                                    </LinearGradientBrush>
                                </ProgressBar.Foreground>
                            </ProgressBar>
                        </StackPanel>

                        <!-- Vitesse -->
                        <StackPanel Margin="0,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Vitesse"/>
                                <TextBlock Text="80" Grid.Column="1" FontWeight="Bold"/>
                            </Grid>
                            <ProgressBar Height="8" Value="80" Maximum="100" Background="#E5E7EB" BorderThickness="0">
                                <ProgressBar.Foreground>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#60A5FA" Offset="0"/>
                                        <GradientStop Color="#A855F7" Offset="1"/>
                                    </LinearGradientBrush>
                                </ProgressBar.Foreground>
                            </ProgressBar>
                        </StackPanel>

                    </StackPanel>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</Window>
